<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        style="@style/edit_product_leanLayout_style"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_edit_product"
            android:gravity="bottom"
            android:paddingBottom="2dp"
            android:text="库房名称：" />

        <EditText
            android:id="@+id/et_goods_name"
            style="@style/edit_edit_product"
            android:gravity="bottom"
            android:hint="名称"
            android:paddingBottom="2dp"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/tv_on_sale"
            style="@style/text_edit_product"
            android:layout_width="60dp"
            android:background="@drawable/border_main"
            android:gravity="center"
            android:text="正常"
            android:textColor="@color/main_color"
            android:textSize="@dimen/small" />
    </LinearLayout>

    <LinearLayout
        style="@style/edit_product_leanLayout_style"
        android:orientation="horizontal">

        <TextView
            style="@style/text_edit_product"
            android:text="城  市:" />

        <TextView
            android:id="@+id/tv_city"
            style="@style/edit_edit_product"
            android:hint="选择城市"
            android:textColor="@color/black"
            android:textSize="@dimen/small" />
    </LinearLayout>

    <LinearLayout
        style="@style/edit_product_leanLayout_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            style="@style/text_edit_product"
            android:text="地址" />

        <EditText
            android:id="@+id/et_address"
            style="@style/edit_edit_product"
            android:hint="请输入地址"
            android:textColor="@color/black"
            android:textSize="@dimen/small" />

    </LinearLayout>

    <LinearLayout
        style="@style/edit_product_leanLayout_style"
        android:orientation="horizontal">

        <TextView
            style="@style/text_edit_product"
            android:text="运费基数 :" />

        <EditText
            android:id="@+id/et_jishu"
            style="@style/edit_edit_product"
            android:hint="基数 * 商品运费 = 商品最终运费"
            android:inputType="textCapCharacters"
            android:textColor="@color/black"
            android:textSize="@dimen/small" />
    </LinearLayout>
</LinearLayout>